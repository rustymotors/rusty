{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "module": "NodeNext",
    "verbatimModuleSyntax": true,
    "declaration": true,

    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "moduleResolution": "NodeNext"
  },
  "files": [],
  "references": [{ "path": "./apps/server" }]
}
