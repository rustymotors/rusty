{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "module": "NodeNext",
    "lib": ["ESNext"],
    "verbatimModuleSyntax": true,
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "moduleResolution": "NodeNext"
  },
  "files": [],
  "references": [
    { "path": "./apps/server" },
    { "path": "./libs/util" },
    { "path": "./libs/web" }
  ]
}
