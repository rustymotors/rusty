{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "check-types"],
      "outputs": ["dist"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "start": {
      "dependsOn": ["^start", "build"]
    },
    "dev": {
      "dependsOn": ["^dev", "check-types"],
      "persistent": true,
      "cache": false
    }
  }
}
